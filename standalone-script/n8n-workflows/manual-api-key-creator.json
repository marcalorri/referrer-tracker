    {
      "parameters": {
        "jsCode": "// Generate API Key\nfunction generateApiKey() {\n  const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';\n  let key = 'rt_live_';\n  for (let i = 0; i < 32; i++) {\n    key += chars.charAt(Math.floor(Math.random() * chars.length));\n  }\n  return key;\n}\n\nconst body = $input.item.json.body;\n\n// Get plan configuration\nconst planConfig = {\n  'free': {\n    domains_limit: 1,\n    monthly_events_limit: 1000,\n    features: 'basic_tracking'\n  },\n  'pro': {\n    domains_limit: 5,\n    monthly_events_limit: 50000,\n    features: 'basic_tracking,click_ids,analytics'\n  },\n  'enterprise': {\n    domains_limit: 999,\n    monthly_events_limit: 999999,\n    features: 'basic_tracking,click_ids,analytics,white_label,priority_support'\n  }\n};\n\nconst plan = body.plan || 'pro';\nconst config = planConfig[plan] || planConfig['pro'];\n\n// Calculate expiration date\nconst expiresAt = new Date();\nif (body.duration_months) {\n  expiresAt.setMonth(expiresAt.getMonth() + parseInt(body.duration_months));\n} else {\n  expiresAt.setMonth(expiresAt.getMonth() + 1); // Default: 1 month\n}\n\n// Generate API key\nconst apiKey = generateApiKey();\n\nreturn {\n  json: {\n    api_key: apiKey,\n    customer_name: body.customer_name || '',\n    customer_email: body.customer_email,\n    customer_id: body.customer_id || 'manual_' + Date.now(),\n    subscription_id: body.subscription_id || null,\n    plan: plan,\n    status: body.status || 'active',\n    domains_limit: body.domains_limit || config.domains_limit,\n    monthly_events_limit: body.monthly_events_limit || config.monthly_events_limit,\n    features: body.features || config.features,\n    allowed_domains: body.allowed_domains || '',\n    current_month_events: 0,\n    created_at: new Date().toISOString(),\n    expires_at: body.never_expires ? null : expiresAt.toISOString(),\n    notes: body.notes || 'Created manually'\n  }\n};"
      },
